<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/cosplay</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McBinaryPhotoEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McCharacteerEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McCommentEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McFranchiseEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McObservationEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McPhotoEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McRatingEntity"/>
    <mapping class="pl.edu.pw.ee.cosplay.rest.model.entity.McUserEntity"/>
    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>