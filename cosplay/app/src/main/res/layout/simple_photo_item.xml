<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        tools:context=".client.fragment.AllPhotosFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:background="#2fffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_margin="5dp"
                    android:background="#32ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="General"
                        android:id="@+id/textView23"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView2"
                            android:src="@mipmap/general"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/textView25"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Similarity"
                        android:id="@+id/textView26"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView3"
                            android:src="@mipmap/similarity"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/textView27"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Quality"
                        android:id="@+id/textView30"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView4"
                            android:src="@mipmap/quality"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/textView29"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Arrangement"
                        android:id="@+id/textView28"
                        android:layout_gravity="center"
                        android:textSize="8dp"
                        android:layout_margin="2dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView5"
                            android:src="@mipmap/arrangement"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/textView31"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>








                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView6"
                        android:src="@mipmap/image_placeholder"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:background="#32ffffff" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#32ffffff">

                        <ImageButton
                            android:layout_width="@dimen/avatar_dimen"
                            android:layout_height="@dimen/avatar_dimen"
                            android:id="@+id/imageButton6"
                            android:src="@mipmap/user"
                            android:scaleType="fitCenter" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="User"
                                    android:id="@+id/userNameTextView"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="13:45 25-04-2015"
                                    android:id="@+id/textView33"
                                    android:layout_gravity="center_vertical|right"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginBottom="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Fr:"
                                    android:id="@+id/textView34"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Franchise"
                                    android:id="@+id/textView35"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Ch:"
                                    android:id="@+id/textView36"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Character"
                                    android:id="@+id/textView37"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="5dp"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show more!"
        android:id="@+id/showMoreButton"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>