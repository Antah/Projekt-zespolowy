<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        tools:context=".client.fragment.AllPhotosFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/linearLayout2"
        android:background="@color/colorBackgroundItem">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:background="#2fffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_margin="5dp"
                    android:id="@+id/itemRatingLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="General"
                        android:id="@+id/textView23"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="8dp"
                        android:ellipsize="end"
                        android:lines="1"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView2"
                            android:src="@mipmap/general"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/generalTextView"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Similarity"
                        android:id="@+id/textView26"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView3"
                            android:src="@mipmap/similarity"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/similarityTextView"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Quality"
                        android:id="@+id/textView30"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView4"
                            android:src="@mipmap/quality"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/qualityTextView"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Arrangement"
                        android:id="@+id/textView28"
                        android:layout_gravity="center"
                        android:textSize="8dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_margin="2dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView5"
                            android:src="@mipmap/arrangement"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/arrangementTextView"
                            android:textColor="#000000"
                            android:textSize="60px"
                            android:enabled="false"
                            android:gravity="center" />
                    </RelativeLayout>








                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/simplePhotoImageView"
                        android:src="@mipmap/image_placeholder"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:background="@color/colorPhotoBG" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/avatar_dimen"
                                android:layout_height="@dimen/avatar_dimen"
                                android:id="@+id/avatarImageButton"
                                android:src="@mipmap/user"
                                android:scaleType="fitCenter"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:text="User"
                                android:id="@+id/userNameTextView"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:textSize="16dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="7dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="0dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Time: "
                                    android:id="@+id/textView5"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="16:54 21-04-2015"
                                    android:id="@+id/dateTextView"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Fr: "
                                    android:id="@+id/textView34"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Franchise"
                                    android:id="@+id/franchiseTextView"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="0dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Ch: "
                                    android:id="@+id/textView36"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Character"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart"
                                    android:id="@+id/characterTextView" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="0dp" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Comments: "
                                    android:id="@+id/textView6"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_height="match_parent"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="0"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:layout_margin="0dp"
                                    android:textSize="11dp"
                                    android:textAlignment="textStart"
                                    android:id="@+id/commentsTextView" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show more"
        android:id="@+id/showMoreButton"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:backgroundTint="@color/colorButton1"
        />

</RelativeLayout>